@model CoreCochesCosmosDb.Models.Vehiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vehiculo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VelocidadMaxima)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VelocidadMaxima)
        </dd>
    </dl>
</div>
<div style="background-color: aqua">
    @if (Model.Motor != null)
    {
    <ul class="list-group">
        <li class="list-group-item">
            Tipo: @Model.Motor.Tipo
        </li>
        <li class="list-group-item">
            Caballos: @Model.Motor.Caballos
        </li>
        <li class="list-group-item">
            Potencia: @Model.Motor.Potencia
        </li>
    </ul>
    }
</div>
